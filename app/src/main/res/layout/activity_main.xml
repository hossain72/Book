<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/book" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="My Library"
        android:textSize="25sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/seeAllBooksBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:text="See All Books"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/currentReadingBooksBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Current Reading Books"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/alreadyReadBooksBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Already Read Books"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/yourWatchlistBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="Your Watchlist"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/seeYourFavoritesBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="See Your Favorites"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/aboutBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="About"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>